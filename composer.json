{
    "name": "supervillainhq/wstools",
    "description": "Website Tools",
    "autoload": {
        "psr-0": {
            "Svhq\\": "./src"
        }
    },
    "bin": [
        "bin/wstools"
    ],
    "config": {
        "secure-http": false,
        "cache-files-ttl": 0
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/SupervillainHQ/Core"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-gettext": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-phalcon": "^4",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "supervillainhq/core": "dev-master",
        "michelf/php-markdown": "^1.9"
    },
    "require-dev": {
        "phalcon/devtools": "^4",
        "phpunit/phpunit": "^9",
        "robmorgan/phinx": "^0.11",
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0"
    }
}
